<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:startColor="#33CFD8DC"
                android:centerColor="#33CFD8DC"
                android:centerY="0.75"
                android:endColor="#33CFD8DC"
                android:angle="270"
                />

            <stroke
                android:width="2px"
                android:color="#607D8B"/>
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <gradient
                    android:startColor="@color/white"
                    android:centerColor="@color/white"
                    android:centerY="0.75"
                    android:endColor="@color/white"
                    android:angle="270"
                    />

                <stroke
                    android:width="2px"
                    android:color="#607D8B"/>
            </shape>
        </clip>
    </item>


    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:startColor="#FFC400"
                    android:centerColor="#FFC400"
                    android:centerY="0.75"
                    android:endColor="#FFC400"
                    android:angle="270"
                    />

                <stroke
                    android:width="2px"
                    android:color="#607D8B"/>
            </shape>
        </clip>
    </item>

</layer-list>